{
  "name": "manifesto.js",
  "version": "2.2.23",
  "description": "IIIF Presentation API utility library for client and server",
  "main": "./dist/server/manifesto.js",
  "types": "./dist/manifesto.d.ts",
  "scripts": {
    "build": "gulp",
    "test": "gulp test && jest",
    "ci": "npm run build && npm test",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iiif-commons/manifesto.git"
  },
  "keywords": [
    "IIIF"
  ],
  "author": "@edsilv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iiif-commons/manifesto/issues"
  },
  "homepage": "https://github.com/iiif-commons/manifesto",
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/node": "^8.0.53",
    "browserify": "13.0.1",
    "chai": "2.3.0",
    "del": "1.1.1",
    "finalhandler": "0.4.0",
    "gulp": "3.8.11",
    "gulp-bump": "0.3.1",
    "gulp-concat": "2.6.0",
    "gulp-insert": "0.5.0",
    "gulp-istanbul": "0.10.0",
    "gulp-mocha": "2.0.1",
    "gulp-rename": "1.2.2",
    "gulp-tag-version": "1.3.0",
    "gulp-typescript": "3.1.5",
    "gulp-uglify": "2.1.2",
    "gulp-utils": "iiif-commons/gulp-utils#v1.0.0",
    "http": "0.0.0",
    "jest": "^23.1.0",
    "merge2": "0.3.5",
    "mocha": "2.2.4",
    "npm-watch": "^0.3.0",
    "require-dir": "0.3.0",
    "run-sequence": "1.1.0",
    "serve-static": "1.10.0",
    "through2": "2.0.1",
    "ts-jest": "^22.4.6",
    "typescript": "2.5.3",
    "yargs": "3.10.0"
  },
  "dependencies": {
    "exjs": "BSick7/exjs#0.5.0",
    "http-status-codes": "edsilv/http-status-codes#v0.0.7",
    "request": "^2.83.0"
  },
  "directories": {
    "test": "test"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/(__tests__)/.*|(\\.|/)(test|spec)?)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
